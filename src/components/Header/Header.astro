import tunel from "@assets/img/tunel.png";
const { class: className } = Astro.props;
---

<header
	class={`hidden md:block bg-custom-pink p-2  rounded-2xl rounded-t-0 relative top-[-30px] ${Astro.props.class || ""}`}
>
	<div class="border-1 border-white p-2 pt-3 rounded-2xl rounded-t-0">
		<a href="/" class="flex gap-1 mb-3">
			<img src={LogoMinCultura.src} />
			<div class="border-r-1 border-white opacity-50"></div>
			<img src={LogoSantaMarta.src} />
		</a>
		<div class="flex gap-3">
			<img src={tunel.src} />
			<p
				class="text-white relative top-[-4px] max-w-[300px] text-justify text-pretty"
			>
				Un tejido de palabra y memoria que honra y reivindica la resistencia
				cultural y espiritual de los siete pueblos ind√≠genas presentes en el
				distrito de Santa Marta.
			</p>
		</div>
	</div>
</header>

