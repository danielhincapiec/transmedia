---
interface Props {
	tituloInicio: string;
	tituloFin: string;
	dark?: boolean;
	class?: string;
}

const {
	tituloInicio,
	tituloFin,
	dark = false,
	class: className = "",
} = Astro.props;
---

<h1
	class={`text-3xl lg:text-7xl mx-auto mb-8 w-auto text-center uppercase text-custom-corn 
		${className}`}
>
	<span class="font-black block">{tituloInicio}</span>
	<span class="font-light block">{tituloFin}</span>
</h1>
