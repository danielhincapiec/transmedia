---
import Iframe from "@src/components/Iframe/Iframe.astro";
import H2 from "@src/components/Typography/H2.astro";
import P from "@src/components/Typography/P.astro";

interface Props {
	dark?: boolean;
	subtitle?: string;
	url?: string;
}

const { dark = false, url, subtitle } = Astro.props;
---

<div
	class={`grid grid-cols-1 md:grid-cols-2 gap-5 mt-8 mx-auto max-w-4xl py-3 ${dark ? "border-custom-corn" : "border-custom-gray"} border-y-1	 mb-8`}
	data-animate
>
	<div class="">
		<H2 class="!mb-1 ml-0" dark={dark}>Relato sonoro</H2>
		<P class="mb-3 !text-[15px]" dark={dark}>{subtitle}</P>
		<P class="mb-3" dark={dark}>
			<slot />
		</P>
	</div>
	<div class="flex items-center">
		<Iframe url={url} class="!mb-0" />
	</div>
</div>
