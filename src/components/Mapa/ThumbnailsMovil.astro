---
import Thumbnail from "@components/Mapa/Thumbnail.astro";

import thumb_arhuacos from "@assets/img/thumb-arhuacos.png";
import thumb_ette from "@assets/img/thumb-ette.png";
import thumb_kankuamo from "@assets/img/thumb-kankuamo.png";
import thumb_kogui from "@assets/img/thumb-kogui.png";
import thumb_taganga from "@assets/img/thumb-taganga.png";
import thumb_wayuu from "@assets/img/thumb-wayuu.png";
import thumb_wiwa from "@assets/img/thumb-wiwa.png";

const { class: ClassName } = Astro.props;
---

<div
	class=`thumbnails-movil fixed inset-0 mt-[70px] w-full h-dvh flex-col ${Astro.props.class ||" "}`
>
	<Thumbnail
		name="Wiwa Gotsezhy"
		img={thumb_wiwa.src}
		class="wiwa thumbnail"
		url="wiwa-gotsezhy"
	/>
	<Thumbnail name="Kogui Malezhi" img={thumb_kogui.src} class="kogui" url="" />
	<Thumbnail
		name="Ette Ennaka Nara Kajmanta"
		img={thumb_ette.src}
		class="ette"
	/>
	<Thumbnail
		name="Kankuamo Atanquez"
		img={thumb_kankuamo.src}
		class="kankuamo"
	/>
	<Thumbnail
		name="Arhuacos Katanzama"
		img={thumb_arhuacos.src}
		class="arhuacos"
	/>
	<Thumbnail
		name="Taganga Santa Marta"
		img={thumb_taganga.src}
		class="taganga"
	/>
	<Thumbnail name="Wayuu Santa Marta" img={thumb_wayuu.src} class="wayuu" />
</div>

<style>
	.thumbnails-movil {
		--size: 0.5;
		padding: 16px;
		/* border: 2px solid lime; */

		.thumbnail {
			margin-bottom: 10px;
			justify-content: end;

			&:nth-child(even) {
				flex-direction: row-reverse;
				justify-content: start;
			}
		}

		.thumbnail__name {
			max-width: none;
		}

		.thumbnail__img {
			width: clamp(50px, 4vw, 110px);
			border: 1px solid white;
			padding: 5px;
		}
	}
</style>
