---
import Layout from "@src/layouts/LayoutPage.astro";
import Container from "@components/Containers/Container.astro";
import Iframe from "@src/components/Iframe/Iframe.astro";
import H2 from "@src/components/Typography/H2.astro";
import P from "@src/components/Typography/P.astro";
import Story from "@src/components/Story/Story.astro";
import Capsules from "@src/components/Capsules/Capsules.astro";
import Population from "@src/components/Population/Population.astro";
import Gallery from "@src/components/Gallery/Gallery.astro";
import MainImagen from "@src/components/MainImagen/MainImagen.astro";
import Sites from "@src/components/Sites/Sites.astro";
import Animate from "@src/components/Animate/Animate.astro";
import ContainerAnimate from "@src/components/Containers/ContainerAnimate.astro";

// data
import data from "@src/data/kankuamo-atanquez.json";

// bg
import bgImg from "@assets/img/kankuamo/bg/bg-1.webp";

// main
import imgMain1 from "@assets/img/kankuamo/main/main-1.webp";
import imgMain2 from "@assets/img/kankuamo/main/main-2.webp";
import imgMain3 from "@assets/img/kankuamo/main/main-3.webp";

// float
import float1 from "@assets/img/kankuamo/float/float-1.webp";

// gallery
import Photo1 from "@assets/img/kankuamo/gallery/foto-1.webp";
import Photo2 from "@assets/img/kankuamo/gallery/foto-2.webp";
import Photo3 from "@assets/img/kankuamo/gallery/foto-3.webp";
import Photo4 from "@assets/img/kankuamo/gallery/foto-4.webp";
import Photo5 from "@assets/img/kankuamo/gallery/foto-5.webp";
import Photo6 from "@assets/img/kankuamo/gallery/foto-6.webp";
import Photo7 from "@assets/img/kankuamo/gallery/foto-7.webp";
import Photo8 from "@assets/img/kankuamo/gallery/foto-8.webp";

const dark = false;
const bg = `url(${bgImg.src})`;

const gallery = [
	{
		url: Photo1.src,
		texto: "",
		row: 1,
		col: 1,
	},
	{
		url: Photo2.src,
		texto: "",
		row: 2,
		col: 1,
	},
	{
		url: Photo3.src,
		texto: "",
		row: 1,
		col: 1,
	},
	{
		url: Photo4.src,
		texto: "",
		row: 1,
		col: 1,
	},
	{
		url: Photo5.src,
		texto: "",
		row: 1,
		col: 1,
	},
	{
		url: Photo6.src,
		texto: "",
		row: 1,
		col: 1,
	},
	{
		url: Photo7.src,
		texto: "",
		row: 1,
		col: 2,
	},
	{
		url: Photo8.src,
		texto: "",
		row: 1,
		col: 1,
	},
];
---

<Layout bg={bg} dark={dark}>
	<div class="ml-2 mr-2 overflow-hidden">
		<MainImagen>
			<img src={imgMain1.src} slot="layer-1" alt="" />
			<img src={imgMain2.src} slot="layer-2" alt="" />
			<img src={imgMain3.src} slot="layer-3" alt="" />
			<span slot="layer-7" class="bg-black/10"> {data.tituloInicio} </span>
			<span slot="layer-8" class="bg-black/10"> {data.tituloFin} </span>
		</MainImagen>
	</div>

	<ContainerAnimate class="pt-3" data-animate>
		<H2 dark={dark} dataAnimate>Documental</H2>
		<Iframe url={data.documentalUrl} dataAnimate />
		<P class="mx-auto max-w-2xl mb-5" dark={dark} dataAnimate
			>{data.documentalParrafo}</P
		>

		<Story subtitle={data.relatoSubtitulo} url={data.relatoUrl} dark={dark}>
			{data.relatoParrafo}
		</Story>

		<Animate>
			<img src={float1.src} slot="obj-1" alt="" />
			<img src={float1.src} slot="obj-2" alt="" />
			<img src={float1.src} slot="obj-3" alt="" />
			<img src={float1.src} slot="obj-2" alt="" />
		</Animate>

		<H2 dark={dark} dataAnimate>CÃ¡psulas</H2>
		<Capsules data={data.capsulas} dark={dark} />
		<Population data={data.poblacion} dark={dark}
			>{data.poblacionParrafo}</Population
		>
		<H2 dark={dark} dataAnimate>Fotogaleria </H2>
		<Gallery images={gallery} columns="3" />
		<!-- <H2 dark={dark}>Sitios sagrados</H2> -->
		<!-- <P class="mx-auto max-w-2xl mb-5" dark={dark}>{data.sitiosParrafo}</P> -->
		<!-- <Sites data={sites} /> -->
	</ContainerAnimate>
</Layout>
