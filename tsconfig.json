{
  "extends": [
    "astro/tsconfigs/strict",
    "./.svelte-kit/tsconfig.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@breakpoints": [
        "./src/assets/css/breakpoints.css"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ]
    }
  },
  "include": [
    "src",
    "svelte.config.js",
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ]
}